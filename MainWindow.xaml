                            <Border Grid.Column="0" Grid.Row="1"  Background="#272B2F" Margin="-1,40,-1,0" />

                            <Border Grid.Column="1" Grid.Row="1"  Background="#272B2F" Margin="0,40,0,0" >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="99"/>
                                        <ColumnDefinition Width="59"/>
                                        <ColumnDefinition Width="4"/>
                                    </Grid.ColumnDefinitions>

                                    <!--// ADD //-->

                                    <Button Grid.Column="1"
                                x:Name="AddButton"
                                Style="{StaticResource DockBtnStyle}" Click="AddClick">

                                        <Button.Background>

                                            <ImageBrush ImageSource="Icons/add.png"
                                            Stretch="Uniform" />

                                        </Button.Background>

                                        <Popup Width="60"
                                   HorizontalOffset="8"
                                   PlacementTarget="{Binding ElementName=AddButton}"
                                   IsOpen="{Binding ElementName=AddButton, Path=IsMouseOver, Mode=OneWay}"
                                   Style="{StaticResource PopupStyle}" >

                                            <Grid>

                                                <Border Style="{StaticResource border}">

                                                    <TextBlock Text="Add"
                                                   Style="{StaticResource PopupText}" />

                                                </Border>

                                                <Path Style="{StaticResource ArrowPath}" />

                                            </Grid>

                                        </Popup>

                                    </Button>
                                    <!--// Edit //-->

                                    <Button Grid.Column="2"
                                x:Name="EditButton"
                                Style="{StaticResource DockBtnStyle}" Click="EditClick">

                                        <Button.Background>

                                            <ImageBrush ImageSource="Icons/edit.png"
                                            Stretch="Uniform" />

                                        </Button.Background>

                                        <Popup Width="60"
                                   HorizontalOffset="8"
                                   PlacementTarget="{Binding ElementName=EditButton}"
                                   IsOpen="{Binding ElementName=EditButton, Path=IsMouseOver, Mode=OneWay}"
                                   Style="{StaticResource PopupStyle}">

                                            <Grid>

                                                <Border Style="{StaticResource border}">

                                                    <TextBlock Text="Edit"
                                                   Style="{StaticResource PopupText}" />

                                                </Border>

                                                <Path Style="{StaticResource ArrowPath}" />

                                            </Grid>

                                        </Popup>

                                    </Button>

                                    <!--// Delete //-->

                                    <Button Grid.Column="3"
                                x:Name="DeleteButton"
                                Style="{StaticResource DockBtnStyle}" Click="DeleteClick">

                                        <Button.Background>

                                            <ImageBrush ImageSource="Icons/delete.png"
                                            Stretch="Uniform" />

                                        </Button.Background>

                                        <Popup Width="60"
                                   HorizontalOffset="8"
                                   PlacementTarget="{Binding ElementName=DeleteButton}"
                                   IsOpen="{Binding ElementName=DeleteButton, Path=IsMouseOver, Mode=OneWay}"
                                   Style="{StaticResource PopupStyle}">

                                            <Grid>

                                                <Border Style="{StaticResource border}">

                                                    <TextBlock Text="Delete"
                                                   Style="{StaticResource PopupText}" />

                                                </Border>

                                                <Path Style="{StaticResource ArrowPath}" />

                                            </Grid>

                                        </Popup>

                                    </Button>

                                    <!--// Preview //-->

                                    <Button Grid.Column="4"
                                x:Name="ViewButton"
                                Style="{StaticResource DockBtnStyle}" Click="ViewClick">

                                        <Button.Background>

                                            <ImageBrush ImageSource="Icons/preview.png"
                                            Stretch="Uniform" />

                                        </Button.Background>

                                        <Popup Width="60"
                                   HorizontalOffset="8"
                                   PlacementTarget="{Binding ElementName=ViewButton}"
                                   IsOpen="{Binding ElementName=ViewButton, Path=IsMouseOver, Mode=OneWay}"
                                   Style="{StaticResource PopupStyle}">

                                            <Grid>

                                                <Border Style="{StaticResource border}">

                                                    <TextBlock Text="Preview"
                                                   Style="{StaticResource PopupText}" />

                                                </Border>

                                                <Path Style="{StaticResource ArrowPath}" />

                                            </Grid>

                                        </Popup>

                                    </Button>

                                    <!--// Print //-->

                                   

                                    <!--// Map //-->

                                   

                                </Grid>
                            </Border>

                            <Border Grid.Column="2" Grid.Row="1"  Background="#272B2F" Margin="-1,40,-1,0" CornerRadius="0,0,0,0"/>
                        </Grid>

                        <Button 
                Style="{StaticResource ExitApp}"
                Click="CloseApp_Click" HorizontalAlignment="Right" VerticalAlignment="Top"  Grid.Column="1"/>

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
